<%= form_with(model: member, class: "bg-white p-2") do |form| %>
  <% if member.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :surname, style: "display: block" %>
    <%= form.text_field :surname, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email_address, style: "display: block" %>
    <%= form.text_field :email_address, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_birth, style: "display: block" %>
    <%= form.text_field :date_of_birth, class:"form-control", id: "datepicker" %>
  </div>
  <div class="d-flex">
    <%= form.submit :class => 'btn btn-primary'%>
    <%= link_to "Back to members", members_path, class: 'ml-1 btn btn-info' %>
  </div>
<% end %>