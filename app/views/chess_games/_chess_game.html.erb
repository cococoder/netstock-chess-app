<div id="<%= dom_id chess_game %>">

  <div class="form-group">
    <label>Black player</label>
    <input type="text" value="<%= chess_game.black_player %>" readonly class="form-control" />
  </div>

 
  <div class="form-group">
    <label>White player</label>
    <input type="text" value="<%= chess_game.white_player %>" readonly class="form-control" />
  </div>

  <% if chess_game.draw? %>
    <div class="form-group">
      <label class="text-dark">Result</label>
      <input type="text" value="Draw" readonly class="form-control" />
    </div>
  <%else %>

    <div class="form-group">
      <label>Winner</label>
      <input type="text" value="<%= chess_game.winner %>" readonly class="form-control border border-success" />
    </div>

    <div class="form-group">
      <label>Loser</label>
      <input type="text" value="<%= chess_game.loser %>" readonly class="form-control border border-danger" />
    </div>

<% end %>

  

</div>
