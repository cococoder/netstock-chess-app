<%= form_with(model: chess_game) do |form| %>
  <% if chess_game.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(chess_game.errors.count, "error") %> prohibited this chess_game from being saved:</h2>

      <ul>
        <% chess_game.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :black_player_id, style: "display: block" %>
    <%= form.select :black_player_id, Member.all.collect{|m| [m.fullname, m.id]}, prompt: "Choose Player (White pieces)" %>
  </div>

  <div>
    <%= form.label :white_player_id, style: "display: block" %>
    <%= form.select :white_player_id, Member.all.collect{|m| [m.fullname, m.id]}, prompt: "Choose Player (black pieces)" %>
  </div>

  <div>
    <%= form.label :winner_id, style: "display: block" %>
    <%= form.select :winner_id, Member.all.collect{|m| [m.fullname, m.id]}, prompt: "Choose Winner" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
